<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:columnCount="2"
    android:background="#424242">

    <TextView
        android:id="@+id/pop_up_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnSpan="2"
        app:layout_gravity="center"
        android:text="@string/new_map_popup_header"
        android:textColor="#C5EFE8"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        android:background="@drawable/ic_photo_camera_white_48dp"
        android:contentDescription="@string/new_map_desc_camera" />

    <ImageButton
        android:id="@+id/filechooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        android:background="@drawable/ic_collections_white_48dp"
        android:contentDescription="@string/new_map_desc_filechooser" />

    <TextView
        android:id="@+id/camera_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        android:text="@string/new_map_camera_label_text"
        android:textColor="#C5EFE8"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/filechooser_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        android:text="@string/new_map_filechooser_label_text"
        android:textColor="#C5EFE8"
        android:textSize="15sp" />

</android.support.v7.widget.GridLayout>
